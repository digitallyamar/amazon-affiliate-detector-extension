{
  "manifest_version": 3,
  "name": "Amazon Affiliate Link Detector",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "windows"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}